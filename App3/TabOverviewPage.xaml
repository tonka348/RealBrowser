<Page
    x:Class="App3.TabOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    Background="Transparent">

    <Grid Background="#CCF6F3FF">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TabItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="32,32,0,0" CornerRadius="16" Background="#FFF" Width="340" Height="220" Shadow="{ThemeResource Shadow}">
                            <Grid>
                                <Image Source="{Binding PreviewImage}" Stretch="UniformToFill" Margin="0,0,0,32"/>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Margin="12,0,40,12" VerticalAlignment="Bottom" Foreground="Black"/>
                                <Button Content="âœ•"
                                        Width="32" Height="32"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Margin="0,8,8,0"
                                        Background="#22FFFFFF"
                                        Foreground="Black"
                                        Click="CloseTab_Click"
                                        Tag="{Binding TabReference}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>